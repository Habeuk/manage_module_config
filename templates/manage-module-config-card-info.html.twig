<div class="col-md-6 col-lg-4 mb-2">
	<div class="card h-100 justify-content-center">
		<a class="p-lg-3 p-2 d-block text-decoration-none" {% if route %} href="{{ route }}" {% endif %}>
			<div class="d-flex align-items-center">
				<span class="btn {{ icon_svg_class }}">
					{{ icon_svg|raw }}
				</span>
				<div class="ml-3">
					<h4 class="fw-normal">{{ name }}</h4>
					<div>{{ description|raw }}</div>
					<div class="progress d-none">
						<div class="progress-bar bg-danger" role="progressbar"
							style="width: 40%" aria-valuenow="40" aria-valuemin="0"
							aria-valuemax="40"></div>
					</div>
				</div>
				{% if number is not same as (null) %}
				<div class="ml-auto">
					<h2 class="display-7 mb-0 font-weight-light"> {{ number }}</h2>
				</div>
				{% endif %}
			</div>
		</a>
	</div>
</div>